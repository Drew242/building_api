<div class="container">
  <div class="col-sm-12">
    <h1>Create Order</h1>
  </div>
  <div class="col-sm-6">
    <%= form_for @order do |f| %>
      <div class="form-group">
        <%= f.label :amount %>
        <%= f.text_field :amount, class: "form-control" %>
      </div>
      <%= f.submit "Create Order", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
