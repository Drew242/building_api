<div class="container">
  <div class="col-sm-12">
    <h1><%= "#{@order.user.name}'s" %> Order</h1>
  </div>
    <div class="col-sm-12">
      <h2>Order <%= @order.id %></h2>
      <h5>Client: <%= @order.user.name %></h5>
      <h5>Order Items</h5>
      <% @order.items.each do |item| %>
        <p>
          <%= "#{item.name}" %>
        </p>
      <% end %>
    </div>
</div>
